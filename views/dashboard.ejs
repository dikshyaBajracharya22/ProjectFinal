<!DOCTYPE html>

<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <title>Sentiment Analyzer Admin</title>
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <link href="/adminstyle.css" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
</head>
<body>
    <input type="checkbox" id="nav-toggle">
    <%- include("./partial/sidemenu.ejs")%>

    <div class="main-content">
        <header>
            <h2>
                Dashboard
           </h2>

            <div class="user-wrapper">
                    <div>
                        <h4>Admin</h4>
                    </div>
           </div>
        </header>

        <main>
            <div class="cards">
                <div class="card-single">
                    <div>
                        <h1><%=productsc%></h1>
                        <span>Products</span>
                    </div>
                    <div>
                        <span class="las la-box"></span>
                    </div>
                </div>

                <div class="card-single">
                    <div>
                        <h1><%=usersc%></h1>
                        <span>Users</span>
                    </div>
                    <div>
                        <span class="las la-users"></span>
                    </div>
                </div>

                <div class="card-single">
                    <div>
                        <h1><%=ordersc%></h1>
                        <span>Orders</span>
                    </div>
                    <div>
                        <span class="las la-clipboard-list"></span>
                    </div>
                </div>

                <div class="card-single">
                    <div>
                        <h1><%=revc%></h1>
                        <span>Reviews</span>
                    </div>
                    <div>
                        <span class="las la-comment"></span>
                    </div>
                </div>
            </div>

            <div class="recent-grid">
                <div class="products">
                    <div class="card">
                        <div class="card-header">
                            <h2>Recent Products</h2>
                            <button>See All <span class="las la-arrow-right"></span></button>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table width="100%">
                                    <thead>
                                        <tr>
                                            <td>ID</td>
                                            <td>Image</td>
                                            <td>Products Name</td>
                                            <td>Price</td>
                                            <td>Reviews</td>
                                        </tr>
                                    </thead>
    
                                    <tbody>
                                        <%products.forEach((product,ind)=>{%>
                                        <tr>
                                            <td><%=ind+1%></td>
                                            <td><img src="/uploads/<%=product.image%>" alt="" height="40px" width="40px"></td>
                                            <td><%=product.productname%></td>
                                            <td><%=product.price%></td>
                                            <td>
                                                <%- include("./partial/star.ejs",{rate:product.rate})%>                          
                                            </td>
                                        </tr>
                                        <%})%>
    
                                      </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="customers">
                    <div class="card">
                        <div class="card-header">
                            <h2>New Customers</h2>
                            <button>See All <span class="las la-arrow-right"></span></button>
                        </div>
                        <div class="card-body">
                            <%users.forEach((user,ind)=>{%>
                            <div class="customer">
                                <div class="info">
                                    <h4><%=user.name%></h4>
                                    &nbsp; &nbsp; &nbsp; &nbsp;
                                    <small><%=user.email%></small>
                                </div>
                                <div class="contact">
                                    <span class="las la-user-circle"></span>
                                    <span class="las la-comment"></span>
                                    <span class="las la-user-email"></span>
                                </div>
                            </div> 

                            <%})%>
                            
                        
                            
                        </div>
                    </div>
                </div>
            </div>

        </main>
    </div>

</body>
</html>
